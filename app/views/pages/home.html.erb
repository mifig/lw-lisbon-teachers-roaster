<div class="banner py-5">
  <h1 class="text-center fw-bold">Le Wagon</h1>
  <h4 class="text-center">Teachers Roasters</h4>
</div>
  
<% if user_signed_in? %> 
  <div class="schools-grid mt-4">
    <% @schools.each do |school| %>
      <div class="school-card text-center">
        <%= link_to school.city, dashboard_path(school), class: "btn" %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="sign-up-container mt-5">
    <h2 class="text-center">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "Log in", class: "btn btn-dark" %>
      </div>
    <% end %>
  </div>
<% end %>